HIERARCHY
#腰から上半身、右足、左足の三つに分かれる
#================================================================
ROOT Hips # ルートボーン: 腰

{{
	OFFSET 0.00 0.00 0.00 # 初期オフセット（座標）
	CHANNELS 6 Xposition Yposition Zposition Zrotation Xrotation Yrotation # モーションデータに影響するチャネル
	JOINT LeftHip # 子ボーン: 左尻
	{{
		OFFSET {LeftHip} # 初期オフセット
		CHANNELS 3 Zrotation Xrotation Yrotation # チャネル

        JOINT LeftKnee # 子ボーン: 左膝
        {{
            OFFSET {LeftKnee} # 初期オフセット
            CHANNELS 3 Zrotation Xrotation Yrotation # チャネル

            JOINT LeftAnkle # 子ボーン: 足首
            {{
            OFFSET {LeftAnkle} # 初期オフセット
            CHANNELS 3 Zrotation Xrotation Yrotation # チャネル
                JOINT LeftHeel # 子ボーン: 左かかと
                {{
                    OFFSET {LeftHeel} # 初期オフセット
                    CHANNELS 3 Zrotation Xrotation Yrotation # チャネル
                    
                    End Site
                    {{
                        OFFSET {LeftHeel} # 終端オフセット
                    }}
                }}

                JOINT LeftToes # 子ボーン: 足つま先
                {{
                    OFFSET {LeftToes} # 初期オフセット
                    CHANNELS 3 Zrotation Xrotation Yrotation # チャネル
                    
                    End Site
                    {{
                        OFFSET {LeftToes} # 終端オフセット
                    }}
                }}
                
            }}
        }}
	}}

    #================================================================================

	JOINT RightHip # 子ボーン: 右尻
	{{
		OFFSET {RightHip} # 初期オフセット
		CHANNELS 3 Zrotation Xrotation Yrotation # チャネル

        JOINT RightKnee # 子ボーン: 右膝
        {{
            OFFSET {RightKnee} # 初期オフセット
            CHANNELS 3 Zrotation Xrotation Yrotation # チャネル

            JOINT RightAnkle # 子ボーン: 右足首
            {{
            OFFSET {RightAnkle} # 初期オフセット
            CHANNELS 3 Zrotation Xrotation Yrotation # チャネル
                JOINT RightHeel # 子ボーン: 右かかと
                {{
                    OFFSET {RightHeel} # 初期オフセット
                    CHANNELS 3 Zrotation Xrotation Yrotation # チャネル
                    
                    End Site
                    {{
                        OFFSET {RightHeel} # 終端オフセット
                    }}
                }}

                JOINT RightToes # 子ボーン: 右足つま先
                {{
                    OFFSET {RightToes} # 初期オフセット
                    CHANNELS 3 Zrotation Xrotation Yrotation # チャネル
                    
                    End Site
                    {{
                        OFFSET {RightToes} # 終端オフセット
                    }}
                }}
                
            }}
        }}


	}}

    #================================================================================
    JOINT Heart # 子ボーン: 中心胸
	{{
		OFFSET {Heart} # 初期オフセット
		CHANNELS 3 Zrotation Xrotation Yrotation # チャネル
        JOINT Nose # 子ボーン: 鼻
        {{
            OFFSET {Nose} # 初期オフセット
            CHANNELS 3 Zrotation Xrotation Yrotation # チャネル
            End Site
            {{
                OFFSET {Nose} # 終端オフセット
            }}
        }}        
        #================================================================================
        
        JOINT LeftShoulder # 子ボーン: 左肩
        {{
            OFFSET {LeftShoulder} # 初期オフセット
            CHANNELS 3 Zrotation Xrotation Yrotation # チャネル

            JOINT LeftElbow # 子ボーン: 左ひじ
            {{
                OFFSET {LeftElbow} # 初期オフセット
                CHANNELS 3 Zrotation Xrotation Yrotation # チャネル
                
                JOINT LeftWrist # 子ボーン: 左手首
                {{
                    OFFSET {LeftWrist} # 初期オフセット
                    CHANNELS 3 Zrotation Xrotation Yrotation # チャネル
                    JOINT LeftThumb # 子ボーン: 左親指
                    {{
                        OFFSET {LeftThumb} # 初期オフセット
                        CHANNELS 3 Zrotation Xrotation Yrotation # チャネル
                        
                        {{
                            OFFSET {LeftThumb} # 終端オフセット
                        }}
                    }}

                    JOINT LeftPinky # 子ボーン: 左小指
                    {{
                        OFFSET {LeftPinky} # 初期オフセット
                        CHANNELS 3 Zrotation Xrotation Yrotation # チャネル
                        End Site
                        {{
                            OFFSET {LeftPinky} # 終端オフセット
                        }}
                    }}
                }}
            }}
        }}
        #================================================================================
        JOINT RightShoulder # 子ボーン: 右肩
        {{
            OFFSET {RightShoulder} # 初期オフセット
            CHANNELS 3 Zrotation Xrotation Yrotation # チャネル

            JOINT RightElbow # 子ボーン: 右ひじ
            {{
                OFFSET {RightElbow} # 初期オフセット
                CHANNELS 3 Zrotation Xrotation Yrotation # チャネル
                
                JOINT RightWrist # 子ボーン: 右手首
                {{
                    OFFSET {RightWrist} # 初期オフセット
                    CHANNELS 3 Zrotation Xrotation Yrotation # チャネル
                    JOINT RightThumb # 子ボーン: 右親指
                    {{
                        OFFSET {RightThumb} # 初期オフセット
                        CHANNELS 3 Zrotation Xrotation Yrotation # チャネル

                        End Site
                        {{
                            OFFSET {RightThumb} # 終端オフセット
                        }}
                    }}
                    
                    JOINT RightPinky # 子ボーン: 右小指
                    {{
                        OFFSET {RightPinky} # 初期オフセット
                        CHANNELS 3 Zrotation Xrotation Yrotation # チャネル
                        End Site
                        {{
                            OFFSET {RightPinky} # 終端オフセット
                        }}
                    }}
                }}
            }}
        }}
    }}

}}
